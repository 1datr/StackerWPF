<UserControl x:Class="WpfStackerLibrary.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <TextBox HorizontalAlignment="Stretch" Margin="4,4,4,4" Name="tbConsole" VerticalAlignment="Stretch" IsReadOnly="True" MouseDown="tbConsole_MouseDown" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
